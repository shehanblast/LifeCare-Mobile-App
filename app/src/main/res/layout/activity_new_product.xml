<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:context=".NewProduct"
        android:id="@+id/r3"
        android:layout_below="@+id/textView18">

    <LinearLayout
        android:id="@+id/layeradmin1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/admin_add_name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add New Product"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </LinearLayout>

        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="189dp"
            android:layout_height="176dp"
            android:layout_below="@+id/layeradmin1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kk"
            android:padding="@android:dimen/app_icon_size"
            android:scaleType="centerCrop"
        />

        <EditText
            android:id="@+id/Product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_product_image"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:hint="name"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/Product_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Product_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:hint="qty"
            android:inputType="number"
            android:padding="14dp" />

    <Button
        android:id="@+id/product_addButton"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Product_Price"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="274dp"
        android:background="@drawable/add_to_cart"
        android:gravity="center"
        android:text="Add Product"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>
